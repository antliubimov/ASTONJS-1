#!/usr/bin/python3

import re
import sys

green_color = "\033[1;32m"
red_color = "\033[1;31m"
color_off = "\033[0m"
blue_color = "\033[1;34m"
yellow_color = "\033[1;33m"

commit_msg_filepath = sys.argv[1]

regex = r"^ASTONJS-1 feat: |fix: |chore: \w"
error_msg = "Commit message format must match regex " + green_color + regex

with open(commit_msg_filepath, "r+") as file:
	commit_msg = file.read()
	if re.search(regex, commit_msg):
    print(green_color + "Good Commit!" + color_off)
	else:
    print(red_color + "Warning: Bad commit " + blue_color + commit_msg)
    print(yellow_color + error_msg)
    print(red_color + "commit-msg hook failed (add --no-verify to bypass)")
    sys.exit(1)
